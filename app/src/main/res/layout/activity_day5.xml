<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day5.Day5Activity">

    <Button
        android:id="@+id/btnMeasureTimeMillis"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Measure TimeMillis"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btnAsync"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAsync"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Async"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btnAsync2"
        app:layout_constraintStart_toEndOf="@+id/btnMeasureTimeMillis"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAsync2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Async2"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAsync"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLazyAsync"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:text="LazyAsync"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btnLazyAsync2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMeasureTimeMillis" />

    <Button
        android:id="@+id/btnLazyAsync2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:text="Lazy Async 2"
        android:textSize="10sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLazyAsync"
        app:layout_constraintTop_toBottomOf="@+id/btnMeasureTimeMillis" />

</androidx.constraintlayout.widget.ConstraintLayout>